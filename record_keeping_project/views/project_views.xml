<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="edit_project" model="ir.ui.view">
        <field name="model">project.project</field>
        <field name="inherit_id" ref="project.edit_project"/>
        <field name="arch" type="xml">
            <widget position="replace">
                <widget name="web_ribbon" title="Confidential" bg_color="bg-danger" attrs="{'invisible': [('is_secret', '=', False)]}" />
            </widget>
            <notebook position="inside">
                <page name="record_keeping" string="Record-keeping">
                    <group>
                        <group>
                            <field name="draw_up_date" widget="date" />
                            <field name="receive_date" widget="date" />
                            <field name="receiver_id" />
                            <field name="sender_id" />
                        </group>
                        <group>
                            <label for="is_official"/>
                            <div class="o_row">
                                <field name="is_official"/>
                                <field name="rk_id" attrs="{'invisible':[('is_official','=',False)]}" class="oe_inline" nolabel="1" />
                            </div>
                            <field name="is_secret" attrs="{'invisible':[('is_official','=',False)]}"/>
                            <field name="law_section_id" attrs="{'invisible':['|',('is_official','=',False),('is_secret','=',False)]}"/>
                        </group>
                    </group>
                </page>
                <page name="meta_information" string="Meta Information">
                    <group>
                        <group>
                            <field name="create_date" widget="date" />
                            <field name="create_uid" />
                        </group>
                        <group>
                            <field name="__last_update" widget="date" />
                            <field name="write_uid" />
                        </group>
                    </group>
                </page>
            </notebook>
            <div class="oe_chatter" position="replace" />
            <sheet position="after">
                <div class="oe_chatter">
                    <field name="message_follower_ids" options="{'post_refresh':True}" help="Follow this project to automatically track the events associated to tasks and issues of this project." groups="base.group_user"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </sheet>
        </field>
    </record>
    <record id="view_task_form2" model="ir.ui.view">
        <field name="model">project.task</field>
        <field name="inherit_id" ref="project.view_task_form2"/>
        <field name="arch" type="xml">
            <notebook position="inside">
                <page name="record_keeping" string="Record-keeping">
                    <group>
                        <group>
                            <field name="draw_up_date" widget="date" />
                            <field name="receive_date" widget="date" />
                            <field name="receiver_id" />
                            <field name="sender_id" />
                        </group>
                        <group>
                            <field name="rk_id" attrs="{'invisible':[('is_official','=',False)]}"/>
                            <field name="is_official" />
                            <field name="is_secret" attrs="{'invisible':[('is_official','=',False)]}"/>
                            <field name="law_section_id" attrs="{'invisible':['|',('is_official','=',False),('is_secret','=',False)]}"/>
                        </group>
                    </group>
                </page>
                <page name="meta_information" string="Meta Information">
                    <group>
                        <group>
                            <field name="create_date" widget="date" />
                            <field name="create_uid" />
                        </group>
                        <group>
                            <field name="__last_update" widget="date" />
                            <field name="write_uid" />
                        </group>
                    </group>
                </page>
            </notebook>
        </field>
    </record>
</odoo>