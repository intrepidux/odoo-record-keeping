<?xml version="1.0"?>
<odoo>
    <record id="module_category_record_keeping" model="ir.module.category">
        <field name="name">Record-keeping</field>
        <field name="sequence">20</field>
        <field name="parent_id" eval="False"/>
    </record>

    <record id="module_category_record_keeping_document" model="ir.module.category">
        <field name="name">Document</field>
        <field name="parent_id" ref="module_category_record_keeping"/>
        <field name="sequence">1</field>
    </record>

    <record id="module_category_record_keeping_law_section" model="ir.module.category">
        <field name="name">Law Section</field>
        <field name="parent_id" ref="module_category_record_keeping"/>
        <field name="sequence">2</field>
    </record>

    <data>
        <record id="group_rk_document_responsible" model="res.groups">
            <field name="name">Record-keeping Document Responsible</field>
            <field name="category_id" ref="module_category_record_keeping_document"/>
            <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
        </record>
        
        <record id="group_rk_document_user" model="res.groups">
            <field name="name">Record-keeping Document User</field>
            <field name="category_id" ref="module_category_record_keeping_document"/>
            <field name="implied_ids" eval="[(4, ref('record_keeping.group_rk_document_responsible'))]"/>
        </record>

        <record id="group_rk_document_manager" model="res.groups">
            <field name="name">Record-keeping Document Manager</field>
            <field name="category_id" ref="module_category_record_keeping_document"/>
            <field name="implied_ids" eval="[(4, ref('record_keeping.group_rk_document_user'))]"/>
            <field name="users" eval="[(4, ref('base.user_root')), (4, ref('base.user_admin'))]"/>
        </record>

        <record id="base.default_user" model="res.users">
            <field name="groups_id" eval="[(4,ref('record_keeping.group_rk_document_manager'))]"/>
        </record>

        <record id="group_rk_law_section_manager" model="res.groups">
            <field name="name">Law Section Manager</field>
            <field name="category_id" ref="module_category_record_keeping_law_section"/>
            <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
            <field name="users" eval="[(4, ref('base.user_root')), (4, ref('base.user_admin'))]"/>
        </record>

