<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="action_classification_view" model="ir.actions.act_window">
        <field name="name">Classification</field>
        <field name="res_model">rk.classification</field>
        <field name="view_mode">kanban,tree,form</field>
        <field name="context">{'search_default_parent': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">Create a Classification</p>
        </field>
    </record>

    <record id="view_classification_form" model="ir.ui.view">
        <field name="model">rk.classification</field>
        <field name="arch" type="xml">
            <form string="Classification">
                <sheet string="Classification">
                    <div class="oe_title">
                        <group>
                            <field name="name" />
                            <field name="header" class="oe_edit_only" />
                            <field name="description" />
                            <field name="parent_id" widget="many2one" />
                            <field name="child_ids" widget="one2many" />
                            <field name="number" />
                            <field name="type_ids" />
                            <field name="is_selectable" />
                        </group>
                    </div>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_classification_search" model="ir.ui.view">
        <field name="model">rk.classification</field>
        <field name="arch" type="xml">
            <search string="Classification">
                <field name="name" string="Name" />
                <group expand="0" string="Group By">
                    <filter string="Parent" name="parent" context="{'group_by': 'parent_id'}"/>
                </group>
            </search>
        </field>
    </record>

    <record id="view_classification_tree" model="ir.ui.view">
        <field name="model">rk.classification</field>
        <field name="arch" type="xml">
            <tree string="Classification" delete="0" sample="1">
                <field name="name" />
                <field name="header" />
                <field name="description" />
                <field name="parent_id" widget="many2one"/>
                <field name="child_ids" widget="one2many" />
                <field name="is_selectable" />
                <field name="number" />
                <field name="type_ids" />
            </tree>
        </field>
    </record>

    <menuitem action="action_classification_view" id="menu_classification_view" parent="record_keeping.menu_record_keeping_configuration" />

    <record id="action_type_view" model="ir.actions.act_window">
        <field name="name">Case Types</field>
        <field name="res_model">rk.type</field>
        <field name="view_mode">kanban,tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">Create a Case Type</p>
        </field>
    </record>

    <record id="view_type_form" model="ir.ui.view">
        <field name="model">rk.type</field>
        <field name="arch" type="xml">
            <form string="Case Types">
                <sheet>
                    <group>
                        <field name="name" />
                        <field name="description" />
                        <field name="classification_id" widget="many2one" />
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <menuitem action="action_type_view" id="menu_type_view" parent="record_keeping.menu_record_keeping_configuration" />
</odoo>