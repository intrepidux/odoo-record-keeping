<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="action_law_section_view" model="ir.actions.act_window">
        <field name="name">Law Section</field>
        <field name="res_model">rk.law.section</field>
        <field name="view_mode">kanban,tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">Create a Law Section</p>
        </field>
    </record>
    <record id="view_law_section_form" model="ir.ui.view">
        <field name="model">rk.law.section</field>
        <field name="arch" type="xml">
            <form string="Law Section">
                <field name="active" invisible="1" />
                <header>
                </header>
                <sheet>
                    <widget name="web_ribbon" title="Archived" bg_color="bg-danger" attrs="{'invisible': [('active', '=', True)]}" />
                    <group>
                        <field name="name" />
                        <field name="description" />
                        <field name="url" widget="url"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    <menuitem action="action_law_section_view" id="menu_law_section" parent="record_keeping.menu_record_keeping" sequence="90" />
</odoo>