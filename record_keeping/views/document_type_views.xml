<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="action_type_view" model="ir.actions.act_window">
        <field name="name">Document Types</field>
        <field name="res_model">rk.document.type</field>
        <field name="view_mode">kanban,tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">Create a Document Type</p>
        </field>
    </record>

    <record id="view_type_form" model="ir.ui.view">
        <field name="model">rk.document.type</field>
        <field name="arch" type="xml">
            <form string="Document Types">
                <sheet>
                    <group>
                        <field name="name" />
                        <field name="description" />
                        <field name="classification_id" domain="[('has_types', '=', True)]"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_type_kanban" model="ir.ui.view">
        <field name="model">rk.document.type</field>
        <field name="arch" type="xml">
            <kanban>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_details oe_kanban_global_click">
                            <field name="name" />
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <record id="view_type_search" model="ir.ui.view">
        <field name="model">rk.document.type</field>
        <field name="arch" type="xml">
            <search string="Document Type">
                <field name="name" string="Name" />
                <group expand="0" string="Group By">
                    <filter string="Classification" name="classification" context="{'group_by': 'classification_id'}"/>
                </group>
            </search>
        </field>
    </record>


    <record id="view_type_tree" model="ir.ui.view">
        <field name="model">rk.document.type</field>
        <field name="arch" type="xml">
            <tree string="Classification" delete="0" sample="1">
                <field name="name" />
                <field name="description" />
                <field name="classification_id" domain="[('has_types', '=', True)]"/>
            </tree>
        </field>
    </record>

    <menuitem action="action_type_view" id="menu_type_view" parent="record_keeping.menu_record_keeping_configuration" />
</odoo>