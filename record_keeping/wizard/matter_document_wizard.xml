<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_attachment_form" model="ir.ui.view">
        <field name="model">rk.matter.document.wizard</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <field 
                        name="datas" 
                        attrs="{'invisible': [('type', '=', 'url')]}" 
                        filename="name" 
                    />
                    <!-- <field 
                        name="url" 
                        attrs="{'invisible': [('type', '=', 'binary')]}" 
                        widget="url" 
                    /> -->
                    <field name="type" invisible="1" />
                    <field name="name" />
                    <field name="description" />
                </group>
                <footer>
                    <button 
                        name="save_button" 
                        class="btn btn-primary" 
                        string="Save" 
                        type="object" 
                    />
                    <button 
                        name="cancel_button" 
                        class="btn btn-secondary" 
                        special="cancel" 
                        string="Cancel" 
                        type="object" 
                    />
                </footer>
            </form>
        </field>
    </record>
    
    <record id="action_attachment_form" model="ir.actions.act_window">
        <field name="res_model">rk.matter.document.wizard</field>
        <field name="target">new</field>
        <field name="view_id" ref="view_attachment_form" />
        <field name="view_mode">form</field>
    </record>
    
</odoo>