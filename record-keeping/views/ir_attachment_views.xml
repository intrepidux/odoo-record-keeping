<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_record-keeping_search" model="ir.ui.view">
        <field name="model">view.record-keeping.search</field>
        <field name="model">ir.attachment</field>
        <field name="inherit_id" ref="base.view_attachment_search" />
        <field name="arch" type="xml">
            <search position="attributes">
                <string>"Official Document"</string>
            </search>
            <field name="name" position="replace">
                <field name="name"
                    filter_domain="[('name','ilike',self)]"
                    string="Official Document" />
            </field>
            <field name="create_date" position="replace">
                <field name="create_date" filter_domain="[('create_date','&gt;=',self)]" />
            </field>
        </field>
    </record>

    <record id="action_record-keeping" model="ir.actions.act_window">
        <field name="name">Record-keeping</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">ir.attachment</field>
        <field name="view_mode">kanban,tree,form</field>
        <field name="search_view_id" ref="view_official_document_search" />
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">Create a new official document</p>
            <p>Also you will find here all the related official documents and download it by clicking on any individual official document.</p>
        </field>
    </record>

    <record id="action_record-keeping_kanban" model="ir.actions.act_window.view">
        <field name="sequence" eval="0" />
        <field name="view_mode">kanban</field>
        <field name="view_id" ref="mail.view_document_file_kanban" />
        <field name="act_window_id" ref="action_record-keeping" />
    </record>

    <record id="view_record-keeping_tree" model="ir.ui.view">
        <field name="name">view.record-keeping.tree</field>
        <field name="model">ir.attachment</field>
        <field name="inherit_id" ref="base.view_attachment_tree" />
        <field name="priority" eval="10" />
        <field name="arch" type="xml">
            <field name="name" position="after">
                <field name="sender_id" />
                <field name="receiver_id" />
                <field name="is_secret" />
                <field name="is_official_document" />
            </field>
        </field>
    </record>

    <record id="action_record-keeping_tree" model="ir.actions.act_window.view">
        <field name="sequence" eval="0" />
        <field name="view_mode">tree</field>
        <field name="view_id" ref="view_record-keeping_tree" />
        <field name="act_window_id" ref="action_record-keeping" />
    </record>

    <record id="view_record-keeping_form" model="ir.ui.view">
        <field name="name">view.record-keeping.form</field>
        <field name="model">ir.attachment</field>
        <field name="inherit_id" ref="attachment_notebook.view_attachment_form" />
        <field name="arch" type="xml">
            <field name="type" position="attributes">
                <attribute name="groups">base.group_no_one</attribute>
                <attribute name="readonly">1</attribute>
            </field>
            <field name="datas" position="attributes">
                <attribute name="string">Content</attribute>
            </field>
            <field name="mimetype" position="replace" />
            <field name="website_id" position="replace" />
            <field name="datas" position="after">
                <field name="received_date" />
                <field name="drawn_up_date" />
                <field name="sender_id" />
                <field name="receiver_id" />
            </field>
            <xpath expr="//field[@name='res_model']/parent::group" position="before">
                <group>
                    <field name="mimetype" string="Type" />
                    <field name="task_id" widget="many2one" />
                    <field name="is_secret" />
                    <field name="is_official_document" />
                </group>
            </xpath>  
            <page name="indexed_content" position="replace">
                <page name="meta_information" string="Meta Information">
                    <group>
                        <group>
                            <field name="create_date" widget="date" />
                            <field name="create_uid" />
                        </group>
                        <group class="text-nowrap">
                            <field name="__last_update" widget="date" />
                            <field name="write_uid" />
                        </group>
                    </group>
                </page>
            </page>
        </field>
    </record>

    <record id="action_record-keepingw_form" model="ir.actions.act_window.view">
        <field name="view_mode">form</field>
        <field name="view_id" ref="view_record-keeping_form" />
        <field name="act_window_id" ref="action_record-keeping" />
    </record>

    <menuitem name="Record-keeping" id="menu_record_keeping" />

    <menuitem id="record_keeping_menu_1"
        name="Menu 1"
        action="action_attachment"
        parent="menu_record_keeping" />

    <menuitem id="record_keeping_menu_configuration"
        action="action_attachment"
        name="Configuration"
        parent="menu_record_keeping" />

</odoo>